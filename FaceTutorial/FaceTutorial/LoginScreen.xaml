<Window x:Class="FaceTutorial.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceTutorial"
        mc:Ignorable="d"
        Title="Login" Height="320" Width="300" FontSize="14" Background="DeepSkyBlue">
	<Border Background="MidnightBlue" CornerRadius="20" Margin="20">
		<StackPanel Margin="20">
			<Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
			<Separator></Separator>
			<Label Content="Username" Foreground="White"></Label>
			<TextBox Name="txtUserName" Background="#545d6a" Foreground="White" FontSize="18"/>
			<Label Content="Password" Foreground="White"></Label>
			<PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
			<Button Name ="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"></Button>
		</StackPanel>
	</Border>
</Window>
